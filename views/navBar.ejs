<head>
  <link href="resources/Estilos/estilosNav.css" rel="stylesheet" />
  <script
    src="https://kit.fontawesome.com/d1c3c8f70d.js"
    crossorigin="anonymous"
  ></script>
  <script src="resources/Js/nav.js"></script>
</head>
<header class="header">
  <div class="logo">
    <a href="index">
      <img src="resources/Img/iconos/CF-Logo.svg" alt="logo-cashflex" />
    </a>
  </div>
  <nav>
    <ul class="nav-links">
      <% if(login){ %>
      <li><a href="#">Acerca de</a></li>
      <li class="dropdown">
        <a><i class="fa-regular fa-user"></i></a>
        <div
          class="dropdown__wrapper hide dropdown__wrapper--fade-in none navbar"
        >
          <div class="dropdown__group">
            <div class="user-name"><%= name %></div>
            <div class="email"><%= email %></div>
          </div>
          <hr class="divider" />
          <nav class="menu-usuario">
            <ul>
              <li>
                <img src="resources/Img/iconos/profile.svg" alt="Perfil" />
                <a>Mi Perfil</a>
              </li>
              <li>
                <img
                  src="resources/Img/iconos/settings.svg"
                  alt="Configuración"
                />
                <a>Configuración</a>
              </li>
            </ul>
            <hr class="divider" />
            <ul>
              <li>
                <img
                  src="resources/Img/iconos/logout.svg"
                  alt="Cerrar Sesión"
                />
                <a href="/logout" style="color: #eb4716"> Cerrar Sesión </a>
              </li>
            </ul>
          </nav>
        </div>
      </li>
      <% } else { %>
      <li><a href="#">Acerca de</a></li>
      <li><a href="login" class="cta-button"> Iniciar Sesión </a></li>
      <li><a href="register" class="cta-button">Registrarse</a></li>
      <%}%>
    </ul>
  </nav>
</header>
